<!DOCTYPE html>
<html lang="en">
        <% include ../../partials/head %>
<body>
        <% include ../../partials/nav %>
        <% include ../../partials/client_sidebar %>

<div class="main-footer">
  <% if(errors != null) { %>
    <div class="alert alert-danger">
     <ul>
       <% errors.forEach(function(element) { %>
         <li><%= element.msg %></li>
       <% }); %>
     </ul>
   </div>
  <% } %>

<div class="container">
  <h2>Ratings</h2>
  <form class="form-horizontal" action="/clients/rate" method="post">
    <div class="form-group">
        <label class="control-label col-sm-2" for="department">Department</label>
        <div class="col-sm-10">
          <select name="employee_department" class="form-control" id="employee_department">
            <option value="" selected disabled>- Select Department -</option>
            <% departments.forEach(function(element) {  %>
              <option value="<%= element.department_id %>"><%= element.department %></option>
            <% }); %>
          </select>
        </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="name">Employee Name</label>
      <div class="col-sm-10">
        <select name="employee_name" id="employee_name" class="form-control">
          <option value="" selected disabled>- Select Employee -</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2"><input type="radio" name="rate" value="1">1</label>
      <label class="col-sm-2"><input type="radio" name="rate" value="2">2</label>
      <label class="col-sm-2"><input type="radio" name="rate" value="3">3</label>
      <label class="col-sm-2"><input type="radio" name="rate" value="4">4</label>
      <label class="col-sm-2"><input type="radio" name="rate" value="5">5</label>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </form>
</div>
</div>>
<% include ../../partials/scripts %>
<% include ../../partials/footer %>

</body>
</html>
